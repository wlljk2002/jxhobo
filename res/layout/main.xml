<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/yellow_1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/leave_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/right_half_bg"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="剩余117张"
        android:textColor="@color/white_1"
        android:textSize="@dimen/font_1" />

    <TextView
        android:id="@+id/start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_bg"
        android:clickable="true"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="开始"
        android:textColor="@color/white_1"
        android:textSize="@dimen/font_1" />

    <TextView
        android:id="@+id/least_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-2dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/left_half_bg"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="最少分 198"
        android:textColor="@color/white_1"
        android:textSize="@dimen/font_1" />
    
    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-2dip"
        android:layout_below="@id/least_point"
        android:layout_marginTop="10dip"
        android:background="@drawable/left_half_bg"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="排名 0/0"
        android:textColor="@color/white_1"
        android:textSize="@dimen/font_1" />

    <TextView
        android:id="@+id/cur_num_tv"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_below="@id/start_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:background="@drawable/num_bg2_normal"
        android:clickable="true"
        android:gravity="center"
        android:text="115"
        android:textColor="@color/white_1"
        android:textSize="@dimen/font_2" />

    <ImageView
        android:id="@+id/clock_im"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_below="@id/cur_num_tv"
        android:layout_marginLeft="20dip"
        android:scaleType="fitCenter"
        android:src="@drawable/clock" />

    <TextView
        android:id="@+id/clock_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/clock_im"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/clock_im"
        android:text="117秒"
        android:textColor="@color/white_1"
        android:textSize="@dimen/font_4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/clock_im"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/grey_1" >

        <LinearLayout
            android:id="@+id/nums_gl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/num_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg2"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />

                <TextView
                    android:id="@+id/num_tv2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg3"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />

                <TextView
                    android:id="@+id/num_tv3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg4"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/num_tv4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg5"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />

                <TextView
                    android:id="@+id/num_tv5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg6"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />

                <TextView
                    android:id="@+id/num_tv6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg7"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/num_tv7"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg8"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />

                <TextView
                    android:id="@+id/num_tv8"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg9"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />

                <TextView
                    android:id="@+id/num_tv9"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_bg10"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="115"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/font_2" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
